<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".startfragment.AndroidLarge1">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ligth_blue"
        >

        <TextView
            android:id="@+id/txt_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/heading1"
            android:layout_marginTop="40dp"
            android:layout_marginStart="32dp"
            android:textSize="28sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/txt_desc"
            android:layout_width="310dp"
            android:layout_height="88dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/fontatyp"
            android:text="@string/desc1"
            android:textAlignment="textStart"
            android:textSize="18sp" />
        <ImageView
            android:id="@+id/img"
            android:layout_width="276dp"
            android:layout_height="345dp"
            android:layout_gravity="center"
            android:src="@drawable/img"
            android:layout_marginTop="80dp"/>

    </LinearLayout>
    <Button
        android:id="@+id/btn_next"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/dark_blue"
        android:foreground="@drawable/ic_arrow_forward"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="40dp"
        android:foregroundGravity="center"

        android:layout_marginEnd="30dp"
        android:padding="12dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>