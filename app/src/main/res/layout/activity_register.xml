<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".authentication.RegisterActivity">

    <ImageView
        android:id="@+id/back_to_otp_verify"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_backspace_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="500dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/aim_design"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"/>
            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/star_design"
                android:layout_marginStart="30dp"
                />
            <TextView
                android:layout_width="255dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="Set Your Password"
                android:textStyle="bold"
                android:textSize="28sp"
                android:textAlignment="center"/>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="231dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="13dp"
                app:passwordToggleEnabled="true"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:hint="Enter the Password"
                    android:id="@+id/edt_pass"
                    android:background="@drawable/bg_bottom_line"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="231dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="13dp"
                app:passwordToggleEnabled="true"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_gravity="center"
                    android:hint="Enter the Password"
                    android:id="@+id/edt_confirm_pass"
                    android:background="@drawable/bg_bottom_line"/>

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="231dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="231dp"
                    android:layout_height="28dp"
                    android:textSize="14sp"
                    android:text="Your password must contain"
                    android:layout_marginTop="25dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="5dp">
                        <ImageView
                            android:id="@+id/valdiate1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@color/grey"
                            android:scaleType="centerCrop"
                            />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Between 8 and 20 characters"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="5dp">
                        <ImageView
                            android:id="@+id/valdiate2"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@color/grey"
                            android:scaleType="centerCrop"
                            android:layout_gravity="center"
                            />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 upper case letter"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="5dp">
                        <ImageView
                            android:id="@+id/valdiate3"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@color/grey"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 or more numbers"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="5dp">
                        <ImageView
                            android:id="@+id/valdiate4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@color/grey"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 or more special character"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btn_signup"
                    android:layout_width="115dp"
                    android:layout_height="55dp"
                    android:backgroundTint="@color/dark_blue"
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center"
                    android:text="Sign up"
                    android:textSize="16sp"
                    />


            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>