<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ligth_blue"
    tools:context=".authentication.OtpForgetPasswordActivity">

    <ImageView
        android:id="@+id/back_to_login"
        android:layout_width="40dp"
        android:layout_height="40dp"
        style="@style/BackArraowButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/CardBackGround"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                style="@style/AimDesign"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"/>
            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                style="@style/StarDesign"
                android:layout_marginStart="30dp"
                />
            <TextView
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="OTP for Password Reset"
                android:textStyle="bold"
                android:textSize="28sp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/txt_shownumber_forgetpass"
                android:layout_width="230dp"
                android:layout_height="38dp"
                android:textSize="15sp"
                style="@style/TextColor"
                android:text="@string/term_policy"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:textAlignment="center"/>


            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                >

                <EditText
                    android:id="@+id/otpEditText1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    style="@style/OTP_Item"
                    android:ems="10"
                    android:maxLength="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:hint="0" />

                <EditText
                    android:id="@+id/otpEditText2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    style="@style/OTP_Item"
                    android:ems="10"
                    android:maxLength="1"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:layout_marginStart="8dp"/>

                <EditText
                    android:id="@+id/otpEditText3"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    style="@style/OTP_Item"
                    android:ems="10"
                    android:maxLength="1"
                    android:inputType="number"
                    android:gravity="center"
                    android:hint="0"
                    android:layout_marginStart="8dp" />

                <EditText
                    android:id="@+id/otpEditText4"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    style="@style/OTP_Item"
                    android:ems="10"
                    android:maxLength="1"
                    android:inputType="number"
                    android:gravity="center"
                    android:hint="0"
                    android:layout_marginStart="8dp"/>


                <EditText
                    android:id="@+id/otpEditText5"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    style="@style/OTP_Item"
                    android:ems="10"
                    android:maxLength="1"
                    android:inputType="number"
                    android:gravity="center"
                    android:hint="0"
                    android:layout_marginStart="8dp" />


            </LinearLayout>


            <Button
                android:id="@+id/btn_continue_forgetpass"
                android:layout_width="115dp"
                android:layout_height="55dp"
                style="@style/ForgetPasswordButtonBackGround"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:text="@string/btn_continue"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/txt_resend_otp_forgetpass"
                android:layout_width="190dp"
                android:layout_height="28dp"
                android:textSize="12sp"
                android:text="@string/resend_otp"
                style="@style/TextColor"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:textAlignment="center"/>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>